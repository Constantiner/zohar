{
	"name": "miko",
	"version": "0.1.0",
	"private": true,
	"description": "A functional type-safe event emitter library with zero dependencies",
	"keywords": [
		"events",
		"typescript",
		"event emitter",
		"javascript"
	],
	"homepage": "https://github.com/Constantiner/miko#readme",
